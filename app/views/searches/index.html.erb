
<div class="form-group mt-5 ">
  <%= form_tag searches_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      id: "query",
      class: "form-control mb-3",
      placeholder: "Enter a word to search"
    %>
    <%# the below commented out is categories - needs to be dropdown %>
    <%= label_tag :category, "Enter one of this categories to get a random fact: animal, career, celebrity, dev, explicit, fashion, food, history, money, movie, music, political, religion, science, sports or travel"
      text_field_tag :category,
      params[:category],
      id: "category",
      class: "form-control mb-3",
      placeholder: "get a random fact from a this category"
    %>
    <%= check_box_tag(:random) %>
    <%= label_tag(:random, "Find me a random fact") %>
    <div>
      <%= submit_tag "Press to get your Chuck Norris facts!", class: "form-control btn btn-success mt-3 mb-5" %>
    </div>
  <% end %>
</div>

  <div class=" mt-3 m-5 ">
    <% if @random_fact || @random_cat_fact %>
      <h2>"<%= @random_fact || @random_cat_fact %>"</h2>
      <% else %>
      <%if @first_page%>
        <% @first_page.each do |fact| %>
          <h4 class="mb-4">"<%= fact['value'] %>"</h4>
        <% end %>
        <%= link_to "Prev page", request.query_parameters.merge({:page => -3}) %>
	      <%= link_to "Next page", request.query_parameters.merge({:page => +3}) %>
      <%end%>
    <%end%>
  </div>
</div>


